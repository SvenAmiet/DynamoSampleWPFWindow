<Window x:Class="DynamoWPFSample.UI.SampleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamoWPFSample.UI"
             mc:Ignorable="d" Width="319.333" Height="286" x:ClassModifier="internal"> <!--this allows the system category to not show up-->
    <Grid Name="MainGrid" Margin="10">
        <TextBox FontSize="24" FontFamily="Comic Sans MS" IsHitTestVisible="False" BorderBrush="{x:Null}"> Awesome Window 3000</TextBox>
        <Grid Margin="0 50 0 30">
            <ListBox Name="SelectionList" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding ItemList}" SelectionMode="Multiple"/>
        </Grid>
        <Button Width="120"  Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Okay" Background="White" Click="Button_Click" FontFamily="Comic Sans MS"/>


    </Grid>
</Window>
